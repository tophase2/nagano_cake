<div class="container">
  <h5><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h5>
  <div class="row">
    <div class="col">
      <table class="table">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
            <% if @customer.is_deleted %>
              <td class="text-secondary"><strong>退会</strong></td>
            <% else %>
              <td class="text-success"><strong>有効</strong></td>
            <% end %>
        </tr>
      </table>
      <div class="d-flex justify-content-around">
        <p><%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %></p>
        <p><%#= link_to "注文履歴一覧を見る", admin_orders_path, class: "btn btn-primary" %></p>
      </div>
    </div>
  </div>
</div>
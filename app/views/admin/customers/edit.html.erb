<div class="container">
  <h5><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h5>
  <div class="row">
    <%= form_with model: @customer, url: admin_customer_path do |f| %> 
    <div class="col">
      <div>
        <%= f.label :"会員ID" %>
        <%= f.label :"#{@customer.id}" %>
      </div>
      <div>
        <%= f.label :"氏名" %>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </div>
      <div>
        <%= f.label :"フリガナ" %>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </div>
      <div>
        <%= f.label :"郵便番号" %>
        <%= f.text_field :postal_code %>
      </div>
      <div>
        <%= f.label :"住所" %>
        <%= f.text_field :address %>
      </div>
      <div>
        <%= f.label :"電話番号" %>
        <%= f.text_field :telephone_number %>
      </div>
      <div>
        <%= f.label :"メールアドレス" %>
        <%= f.text_field :email %>
      </div>
      <div>
        <%= f.label :"会員ステータス" %>
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted, "有効"%>
      　<%= f.radio_button :is_deleted, true %>
      　<%= f.label :is_deleted, "退会" %>
      </div>
    </div>
    <div>
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>
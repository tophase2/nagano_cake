<div class="container">
  <h4 class="mx-5 my-5"><strong>商品新規登録</strong></h4>
  <div class="row">
    <div class="col-8 mb-5 mx-auto justify-content-center">
      <%= form_with model: @item, url: admin_items_path do |f| %>
        <table>
          <tr>
            <div class="form-group">
              <th><%= f.label :商品画像, class: "form_label" %></th>
              <td><%= f.file_field :image, accept: "image/*", class: "mb-3 ml-3" %></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :商品名, class: "form_label" %></th>
              <td><%= f.text_field :name, placeholder: "商品名", class: "form-control mb-3" %></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :商品説明, class: "form_label" %></th>
              <td><%= f.text_area :introduction, size: "50x5", placeholder: "ここに説明文を記述します", class: "form-control mb-3" %></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :税抜価格, class: "form_label" %></th>
              <td><%= f.text_field :price, placeholder: "1000" %>円</td>
            </div>
          </tr>
        </table>
          <br>
            <div class="form-action d-flex justify-content-around">
              <%= f.submit "新規登録", class: "btn btn-success" %>
            </div>
      <% end %>
    </div>
  </div>
</div>

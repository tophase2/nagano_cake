<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="mx-5 my-5"><strong>商品一覧</strong></h4>
    </div>
    <div class="col text-right my-5">
      <%= link_to new_admin_item_path do %>
        <i class="fa-solid fa-circle-plus fa-2xl"></i>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item.id) %></td>
              <td><%= item.price %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>

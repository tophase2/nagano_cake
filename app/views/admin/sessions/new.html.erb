<div class="container">
  <h4 class="mx-5 my-5"><strong>管理者ログイン</strong></h4>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <div class="row my-3 justify-content-center">
          <div class="col-auto">
            <%= f.label :メールアドレス %>
          </div>
          <div class="col-6">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3" %>
          </div>
        </div>
      </div>
      <div class="field">
        <div class="row my-3 mb-5 justify-content-center">
          <div class="col-auto">
            <%= f.label :パスワード %>
          </div>
          <div class="col-6">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control mb-3" %>
          </div>
        </div>
      </div>
      <div class="actions mb-5">
        <div class="row justify-content-center">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <h4>ショッピングカート</h4>
      <% if @cart_items.exists? %>
      <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, "data-confirm" => "カートを空にしてよろしいですか？", class: "pull-right btn btn-danger" %>
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.item.get_image(100,100) %> <%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td>
              <%= form_with model: @cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
                <%= f.number_field :amount, min: 1, max: 30, step: 1 %>
                <%= f.submit "変更", class: "btn btn-success" %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal %></td>
            <td><%= link_to " 削除する", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "#{cart_item.item.name}を削除してよろしいですか？", class: "btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to " 買い物を続ける", items_path, class: "btn btn-primary" %>
      <div class="col">
      <table class="table table-hover table-bordered">
        <tr>
          <th>合計金額</th>
          <td>
           ¥<%# @total_price += cart_item.subtotal %>
          </td>
        </tr>
      </table>
      </div>
      <%= link_to " 情報入力に進む", new_order_path, class: "btn btn-success center-block" %>
        <% else %>
      <%= render "no_cart" %>
        <% end %>
    </div>
  </div>
</div>
<div class="container">
  <h5>注文情報確認</h5>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <% @total_price += cart_item.subtotal %>
            <tr>
              <td class="text-left">
                <%= image_tag cart_item.item.get_image(50,50) %>
                <%= cart_item.item.name %>
              </td>
              <td class="text-right">
                <%= cart_item.item.with_tax_price %>
              </td>
              <td class="text-right">
                <%= cart_item.amount %>
              </td>
              <td class="text-right">
                <%= cart_item.subtotal %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col">
      <table class="table">
        <tr>
          <th>送料</th>
          <td class="text-right col-xs-5"><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th class="info">商品合計</th>
          <td class="text-right"><%= @total_price %></td>
        </tr>
        <tr>
          <th class="info">請求金額</th>
          <td class="text-right"><%= @total_price + @order.shipping_cost %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-8">
      <h5>支払方法</h5>
        <%= @order.payment_method_i18n %>
      <h5>お届け先</h5>
        <%= "#{@order.postal_code} #{@order.address} #{@order.name}" %>
    </div>
  </div>
  <div class="row">
    <h3 class="mx-auto">
      <%= form_with model: @order, url: orders_path, method: :post do |f| %>
        <%= f.hidden_field :payment_method, :value => @order.payment_method %>
        <%= f.hidden_field :shipping_cost, :value => 800 %>
        <%= f.hidden_field :postal_code, :value => @order.postal_code %>
        <%= f.hidden_field :address, :value => @order.address %>
        <%= f.hidden_field :name, :value => @order.name %>
        <%= f.hidden_field :total_payment, :value => @total_price %>
        <%= f.submit '注文を確定する', class: 'btn btn-success' %>
      <% end %>
    </h3>
  </div>
</div>
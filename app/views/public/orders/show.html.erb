<div class="container">
  <h5>注文履歴詳細</h5>
  <div class="row">
    <div class="col">
      <strong>注文情報</strong>
      <table class="table">
        <tbody>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              <%= @order.postal_code %><br>
              <%= @order.address %><br>
      	      <%= @order.name %>
      	    </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
        </tbody>
      </table>
      <strong>請求情報</strong>
      <table class="table">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td><%= @order.total_payment %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= @order.total_payment + @order.shipping_cost %></td>
          </tr>
        </tbody>
      </table>
      <strong>注文内容</strong>
      <table>
        <thead>
          <tr>
            <th>商品</th>
	          <th>単価(税込)</th>
	    	    <th>個数</th>
	    	    <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
		          <td><%= order_detail.item.name %></td>
		          <td><%= order_detail.item.with_tax_price %>円</td>
		          <td><%= order_detail.amount %></td>
		          <td>
		            <%= order_detail.price %>円
		          </td>
		          <% @total_price += order_detail.price %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
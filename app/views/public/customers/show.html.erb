<div class="container">
  <h4 class="mx-4 my-5"><strong>マイページ</strong></h4>
  <div class="row">
    <h5 class="mx-5 my-2"><strong>登録情報</strong></h5>
    <p><%= link_to "編集する", customers_information_edit_path, class: "btn btn-success btn-block" %></p>
      <table class="table border">
        <tr>
          <th>名前</th>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    <h5 class="mx-5 my-2"><strong>注文履歴</strong></h5>
    <p><%= link_to "一覧を見る", orders_path, class: "btn btn-primary btn-block" %></p>
  </div>
</div>

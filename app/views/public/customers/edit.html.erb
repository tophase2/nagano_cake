<div class="container">
  <h4 class="mx-5 my-5"><strong>会員情報編集</strong></h4>
  <div class="row">
    <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
    <table>
      <tr>
        <th>氏名</th>
        <td class="d-flex"><%= f.text_field :last_name, class: "form-control mb-2" %>　<%= f.text_field :first_name, class: "form-control mb-2" %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td class="d-flex"><%= f.text_field :last_name_kana, class: "form-control mb-2" %>　<%= f.text_field :first_name_kana, class: "form-control mb-2" %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= f.text_field :postal_code, class: "form-control mb-2" %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_field :address, class: "form-control mb-2" %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= f.text_field :telephone_number, class: "form-control mb-2" %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.text_field :email, class: "form-control mb-2" %></td>
      </tr>
      <tr>
        <th></th>
        <td><%= f.submit "編集内容を保存", class: "btn btn-success" %>　　　　　<%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %></td>
      </tr>
    </table>
    <% end %>
  </div>
</div>

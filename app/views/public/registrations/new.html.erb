<div class="container">
  <h4 class="mx-5 my-4"><strong>新規会員登録</strong></h4>
  <div class="row">
    <div class="col">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
          <table>
            <tr>
              <div class="field">
                <th><%= f.label :名前 %></th>
                <td class="d-flex">(姓)　<%= f.text_field :last_name, autofocus: true, class: "form-control mb-2" %>(名)　<%= f.text_field :first_name, autofocus: true, class: "form-control mb-2" %></td>
              </div>
            </tr>
            <tr>
              <div class="field">
                <th><%= f.label :フリガナ %></th>
                <td class="d-flex">(セイ)　　<%= f.text_field :last_name_kana, autofocus: true, class: "form-control mb-2" %>(メイ)　　<%= f.text_field :first_name_kana, autofocus: true, class: "form-control mb-2" %></td>
              </div>
            </tr>
            <tr>
              <div class="field">
                <th><%= f.label :メールアドレス %></th>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-2" %></td>
              </div>
            </tr>
            <tr>
              <div class="field">
                <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
                <td><%= f.text_field :postal_code, autofocus: true, class: "form-control mb-2" %></td>
              </div>
            </tr>
            <tr>
              <div class="field">
                <th><%= f.label :住所 %></th>
                <td><%= f.text_field :address, autofocus: true, class: " form-control mb-2" %></td>
              </div>
            </tr>
            <tr>
              <div class="field">
                <th><%= f.label :"電話番号(ハイフンなし)" %></th> 
                <td><%= f.text_field :telephone_number, autofocus: true, class: "form-control mb-2" %></td>
              </div>
            </tr>
            <tr>
              <div class="field">
                <th>
                  <%= f.label :パスワード %>
                  <% if @minimum_password_length %>
                    (<%= @minimum_password_length %>文字以上)
                  <% end %>
                </th>
                <td><%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-2" %></td>
              </div>
            </tr>
            <tr>
              <div class="field">
                <th><%= f.label :"パスワード(確認用)" %></th>
                <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-2" %></td>
              </div>
            </tr>
          </table>
            <div class="row justify-content-center">
              <div class="col-8">
                <%= f.submit "新規登録", class: "btn btn-success mb-2" %>
              </div>
            </div>
  <h5 class="mx-5 my-4"><strong>既に登録済みの方</strong></h5>
    <div class="row justify-content-center">
      <div class="col-10">
        <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
      </div>
    </div>
    </div>
  </div>
      <% end %>
</div>

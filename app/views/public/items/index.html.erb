<div class="container">
  <h4 class="mx-5 my-5"><strong>商品一覧</strong>(全<%= @items.count %>件)</h4>
  <div class="row">
    <% @items.each do |item| %>
    <div class="col flex-wrap">
      <%= link_to item_path(item.id) do %>
        <%= image_tag item.get_image(200,200) %>
      <% end %>
      <p><%= item.name %></p>
      <p>¥<%= item.price %></p>
    </div>
    <% end %>
  </div>
  <%= paginate @items %>
</div>